<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Node & FS Module Note App</title>

        <!-- link css -->
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body class="bg-black/90 py-14">
        <h2
            class="text-center text-3xl text-gray-900 mb-8 font-semibold bg-green-500 py-3"
        >
            Node & FS Module Note App
        </h2>
        <!-- Add Task Form -->
        <form class="max-w-[80vw] mx-auto" action="/add-note" method="post">
            <input
                required
                name="title"
                type="text"
                placeholder="Enter note title here..."
                class="w-full bg-gray-800 px-3 py-2 text-lg rounded-md text-white"
            />
            <textarea
                required
                name="description"
                class="w-full bg-gray-800 px-3 py-2 text-lg rounded-md mt-4 text-white"
                placeholder="Enter notes details here...."
                rows="6"
            ></textarea>
            <button
                type="submit"
                class="w-full bg-blue-700 px-3 py-2 rounded-md mt-2 text-white font-semibold"
            >
                Add Note
            </button>
        </form>

        <!-- Todo View -->
        <div
            class="mt-10 gap-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 max-w-[80vw] mx-auto text-white"
        >
            <% if(notes.length > 0) { %>
            <!--  -->
            <% notes.forEach((note) => { %>
            <div class="bg-gray-800 rounded-md px-5 py-3">
                <h2 class="font-semibold text-2xl"><%= note.title %></h2>
                <a href="/note/<%= note.id %>" class="mt-3 text-blue-700 block"
                    >Read Details...</a
                >
            </div>
            <% }) %>
            <!--  -->
            <% } else { %>
            <h3 class="text-center bg-gray-800 rounded-md px-5 py-3">
                No Notes Added Yet...
            </h3>
            <% } %>
        </div>

        <!-- script -->
        <script src="/javascripts/script.js"></script>
    </body>
</html>
